{
  "manifest_version": 3,
  "name": "Rewrite & Summarize",
  "version": "1.0",
  "description": "Select text to rewrite or summarize using AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Rewrite & Summarize Settings",
    "default_popup": "options.html"
  }
}