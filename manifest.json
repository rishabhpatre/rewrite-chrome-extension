{
  "manifest_version": 3,
  "name": "Draftly - AI Writing Companion",
  "version": "1.0",
  "description": "Your global AI writing assistant. Rewrite, summarize, translate, draft replies, and create Jira tickets from any text.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Draftly Settings",
    "default_popup": "options.html"
  }
}